<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.devMode" value="true"/>
    <package name="BarangHabisPakai" extends="json-default,struts-default" namespace="/bhp">
    
    	<!--mendeklarasikan dan memanggil class interceptor -->
    	<interceptors>
    		<interceptor name="authinterceptorLogin" class="com.id.sima.core.controller.CoreAuthentication" />
    		<interceptor-stack name="authStack">
				<interceptor-ref name="authinterceptorLogin"/>
				<interceptor-ref name="defaultStack"/>
				<interceptor-ref name="basicStack"/>
			</interceptor-stack>
    	</interceptors>
    	
    	<global-results>
			<result name="login">/pages/template/login.jsp</result>
		</global-results>
        
    	<action name="SearchAllBhp" class="com.id.sima.modul.controller.BarangHabisPakaiController" method="searchAllBhp">
    		<interceptor-ref name="authStack"/>
    		<result name="success">/pages/modul/inventaris/barangBhpMain.jsp</result>
    		<result name="error">/pages/modul/inventaris/barangBhpMain.jsp</result>
    	</action>
    	<action name="SelectListBhp" class="com.id.sima.modul.controller.BarangHabisPakaiController" method="searchList">
    		<interceptor-ref name="authStack"/>
    		<result name="success">/pages/modul/inventaris/barangBhpMain.jsp</result>
    		<result name="error">/pages/modul/inventaris/barangBhpMain.jsp</result>
    	</action>
    	<action name="SelectByJson" class="com.id.sima.modul.controller.BarangHabisPakaiController" method="searchKodeToJson">
    		<result type="json">
                <param name="noCache">true</param>
		        <param name="root">barang</param>
    		</result>
    	</action>
    	<action name="AddBhp">
    		<interceptor-ref name="authStack"/>
    		<result name="input">/pages/modul/inventaris/barangBhpAdd.jsp</result>
    		<result name="success">/pages/modul/inventaris/barangBhpAdd.jsp</result>
    		<result name="error">/pages/modul/inventaris/barangBhpAdd.jsp</result>
    	</action>
    	<action name="SaveBhp" class="com.id.sima.modul.controller.BarangHabisPakaiController" method="addBarangBhp">
    		<interceptor-ref name="authStack"/>
    		<result name="input">/pages/modul/inventaris/barangBhpAdd.jsp</result>
    		<result name="success">/pages/modul/inventaris/barangBhpMain.jsp</result>
    		<result name="error">/pages/modul/inventaris/barangBhpAdd.jsp</result>
    	</action>
    	<action name="EditBhp" class="com.id.sima.modul.controller.BarangHabisPakaiController" method="searchWhereKodeBhp">
    		<interceptor-ref name="authStack"/>
    		<result name="input">/pages/modul/inventaris/barangBhpEdit.jsp</result>
    		<result name="success">/pages/modul/inventaris/barangBhpEdit.jsp</result>
    		<result name="error">/pages/modul/inventaris/barangBhpEdit.jsp</result>
    	</action>
    	<action name="SaveEditBhp" class="com.id.sima.modul.controller.BarangHabisPakaiController" method="editBarangBhp">
    		<interceptor-ref name="authStack"/>
    		<result name="input">/pages/modul/inventaris/barangBhpEdit.jsp</result>
    		<result name="success">/pages/modul/inventaris/barangBhpMain.jsp</result>
    		<result name="error">/pages/modul/inventaris/barangBhpEdit.jsp</result>
    	</action>
    	<action name="DeletBhp" class="com.id.sima.modul.controller.BarangHabisPakaiController" method="deletBarangBhp">
    		<interceptor-ref name="authStack"/>
    		<result name="success">/pages/modul/inventaris/barangBhpMain.jsp</result>
    		<result name="error">/pages/modul/inventaris/barangBhpMain.jsp</result>
    	</action>
    	<action name="ViewBhp" class="com.id.sima.modul.controller.BarangHabisPakaiController" method="searchWhereKodeBhp">
    		<interceptor-ref name="authStack"/>
    		<result name="success">/pages/modul/inventaris/barangBhpView.jsp</result>
    		<result name="error">/pages/modul/inventaris/barangBhpView.jsp</result>
    	</action>
    </package>
</struts>